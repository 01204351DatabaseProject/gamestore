<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>
    <%= game.name %>
  </title>

  <!-- Bootstrap Core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="/css/shop-homepage.css" rel="stylesheet">

  <!-- jQuery -->
  <script src="/js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="/js/bootstrap.min.js"></script>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

  <%- include navbar.ejs %>
    <br/>
    <br/>
    <div class="container">
      <div class "row">
        <div class="col-md-6">
          <img src="/img/<%=game.game_id%>.jpg" height="215px" width="460px">
        </div>
        <div class="col" style="font-size:16px;">
          <div class="list-group text-profile col-md-6">
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4">
                  <b>Name:</b>
                </div>
                <div class="col-md-8">
                  <%= game.name %>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4">
                  <b>Price:</b>
                </div>
                <div class="col-md-8">
                  <%= game.price %>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4">
                  <b>Buy For:</b>
                </div>
                <div class="col-md-8">
                  <%= username %>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4">
                  <b>Payment Type:</b>
                </div>
                <div class="col-md-8">
                  <%= payments[0].payment_type %>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4">
                  <b>Card Number:</b>
                </div>
                <div class="col-md-8">
                  <%= payments[0].card_number %>
                </div>
              </div>
            </li>
            <br/>
              <button type="button" class="btn btn-default btn-lg" style="width:557px" data-href="/payment/checkout">Confirm to Buy</button>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/game.js"></script>
</body>

</html>